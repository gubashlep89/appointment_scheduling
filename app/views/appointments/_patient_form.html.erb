<%= form_with(model: patient) do |form| %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :contact_details, style: "display: block" %>
    <%= form.text_field :contact_details %>
  </div>

  <div>
    <%= form.label :history_summary, style: "display: block" %>
    <%= form.text_area :history_summary %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
