<div class="container mt-5">
  <h1>Doctors</h1>
  <div class="row">
    <div class="col-6">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <% @doctors.each do |doctor| %>
          <tr>
            <th><%= doctor.name %></th>
            <td><%= link_to 'Check availability', doctor_appointments_path(doctor), class: 'btn btn-outline-success btn-sm' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col"></div>
  </div>
</div>
