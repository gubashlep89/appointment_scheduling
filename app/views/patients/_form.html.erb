<%= form_with(model: patient) do |form| %>
  <div>
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :contact_details, class: 'form-label' %>
    <%= form.text_field :contact_details, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :history_summary, class: 'form-label' %>
    <%= form.text_area :history_summary, class: 'form-control' %>
  </div>

  <br>

  <div>
    <%= form.submit 'Save', class: 'btn btn-outline-success' %>
  </div>
<% end %>
